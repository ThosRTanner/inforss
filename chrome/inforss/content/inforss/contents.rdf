<?xml version="1.0"?>

<RDF:RDF xmlns:RDF="http://www.w3.org/1999/02/22-rdf-syntax-ns#"
         xmlns:chrome="http://www.mozilla.org/rdf/chrome#">

   <!-- list all the packages being supplied by this jar -->
   <RDF:Seq about="urn:mozilla:package:root">
      <RDF:li resource="urn:mozilla:package:inforss"/>
   </RDF:Seq>

   <!-- package information -->
   <RDF:Description about="urn:mozilla:package:inforss"
      chrome:locType="install"
      chrome:name="inforss"
      chrome:displayName="infoRSS 1.0.3"
      chrome:author="Didier Ernotte"
      chrome:authorURL="http://inforss.mozdev.org"
      chrome:extension="true"
      chrome:description="Display RSS and Atom headlines in the Firefox status bar."
      chrome:settingsURL="chrome://inforss/content/inforssSettings.xul"
   >
   </RDF:Description>

   <!-- overlay information -->
   <RDF:Seq about="urn:mozilla:overlays">
      <RDF:li resource="chrome://browser/content/browser.xul"/>
	  <RDF:li resource="chrome://navigator/content/navigator.xul"/>
	  <RDF:li resource="chrome://messenger/content/mailWindowOverlay.xul"/>
	  <RDF:li resource="chrome://browser/content/feeds/options.xul"/>
   </RDF:Seq>

   <!-- FireFox overlay information -->
   <RDF:Seq about="chrome://browser/content/browser.xul">
      <RDF:li>chrome://inforss/content/inforssOverlay.xul</RDF:li>
   </RDF:Seq>
   <!-- FireFox feed pref -->
   <RDF:Seq about="chrome://browser/content/feeds/options.xul">
      <RDF:li>chrome://inforss/content/inforssGeckoFeedOverlay.xul</RDF:li>
   </RDF:Seq>
   <RDF:Seq about="chrome://browser/content/bookmarks/addBookmark2.xul">
      <RDF:li>chrome://inforss/content/inforssLivemarkOverlay.xul</RDF:li>
   </RDF:Seq>

   	<!-- Mozilla -->
	<RDF:Seq about="chrome://navigator/content/navigator.xul">
		<RDF:li>chrome://inforss/content/inforssOverlay.xul</RDF:li>
	</RDF:Seq>

    <!-- Thunderbird / Mozilla Mail -->
    <RDF:Seq about="chrome://messenger/content/mailWindowOverlay.xul">
      <RDF:li>chrome://inforss/content/inforssOverlay.xul</RDF:li>
    </RDF:Seq>

    <!-- Nvu -->
    <RDF:Seq about="chrome://editor/content/editor.xul">
      <RDF:li>chrome://inforss/content/inforssOverlay.xul</RDF:li>
    </RDF:Seq>
    <RDF:Seq about="chrome://navigator/content/navigator.xul">
      <RDF:li>chrome://inforss/content/inforssOverlay.xul</RDF:li>
    </RDF:Seq>
</RDF:RDF>

